{
  "name": "@kajidog/mcp-tts-voicevox",
  "version": "0.2.2",
  "description": "VOICEVOX integration for MCP - Text-to-Speech server using VOICEVOX engine",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "require": "./dist/client.js",
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "bin": {
    "mcp-tts-voicevox": "./dist/index.js"
  },
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "start:stdio": "node dist/stdio.js",
    "start:http": "MCP_HTTP_MODE=true node dist/index.js",
    "start:http:win": "powershell -Command \"$env:MCP_HTTP_MODE='true'; node dist/index.js\"",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "dev:stdio": "NODE_ENV=development ts-node src/stdio.ts",
    "dev:http": "NODE_ENV=development MCP_HTTP_MODE=true ts-node src/index.ts",
    "dev:http:win": "powershell -Command \"$env:NODE_ENV='development'; $env:MCP_HTTP_MODE='true'; ts-node src/index.ts\"",
    "build": "tsc && pnpm -r --filter \"./packages/*\" build && node scripts/fix-permissions.js",
    "build:tsgo": "tsgo && pnpm -r --filter \"./packages/*\" build:tsgo && node scripts/fix-permissions.js",
    "build:clean": "rm -rf dist && pnpm -r --filter \"./packages/*\" run build:clean && pnpm build",
    "lint": "biome check . && pnpm -r --filter \"./packages/*\" lint",
    "lint:fix": "biome check --write . && pnpm -r --filter \"./packages/*\" lint:fix",
    "test": "vitest run && pnpm -r --filter \"./packages/*\" test",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm lint"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "scripts"
  ],
  "keywords": [
    "voicevox",
    "tts",
    "text-to-speech",
    "mcp",
    "mcp-server"
  ],
  "author": {
    "name": "kajidog",
    "email": "dev@kajidog.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kajidog/mcp-tts-voicevox.git"
  },
  "bugs": {
    "url": "https://github.com/kajidog/mcp-tts-voicevox/issues"
  },
  "homepage": "https://github.com/kajidog/mcp-tts-voicevox#readme",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@kajidog/voicevox-client": "0.2.0",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@typescript/native-preview": "7.0.0-dev.20250712.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}