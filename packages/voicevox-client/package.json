{
  "name": "@kajidog/voicevox-client",
  "version": "0.2.0",
  "description": "VOICEVOX client library for text-to-speech synthesis with queue management",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "child_process": false,
    "process": false
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "commonjs",
  "scripts": {
    "test": "vitest run",
    "build": "tsc",
    "build:tsgo": "tsgo",
    "build:clean": "rm -rf dist && pnpm build",
    "lint": "biome check . && tsc --noEmit",
    "lint:fix": "biome check --write .",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm lint"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "keywords": ["voicevox", "tts", "text-to-speech", "audio", "synthesis", "queue"],
  "author": {
    "name": "kajidog",
    "email": "dev@kajidog.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kajidog/mcp-tts-voicevox.git",
    "directory": "packages/voicevox-client"
  },
  "bugs": {
    "url": "https://github.com/kajidog/mcp-tts-voicevox/issues"
  },
  "homepage": "https://github.com/kajidog/mcp-tts-voicevox/tree/main/packages/voicevox-client#readme",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@effect/platform-node": "^0.94.0",
    "axios": "^1.8.4",
    "effect": "^3.17.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.19.2",
    "@types/uuid": "^10.0.0",
    "@typescript/native-preview": "7.0.0-dev.20250712.1",
    "typescript": "^5.0.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "browserslist": ["> 1%", "last 2 versions", "not dead"]
}
